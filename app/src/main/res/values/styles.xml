<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_normal</item>
        <item name="colorPrimaryDark">@color/blue_pressed</item>
        <item name="colorAccent">#1BA5E3</item>
    </style>


    //悬浮按钮
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    //登录
    <!--自定义EditText的下划线-->
    <style name="Theme.Custom.Control.EditText" parent="Theme.AppCompat.Light">
        <!--EditText未被激活时的下划线颜色-->
        <item name="colorControlNormal">#00000000</item>
        <!--EditText激活时的下划线颜色-->
        <item name="colorControlActivated">#00000000</item>
    </style>

    <style name="AccountTextStyle">

        <item name="android:textColor">#f8fefe</item>

        <item name="android:textSize">20sp</item>
        <!--最多显示1行-->
        <item name="android:maxLines">1</item>
        <!--垂直滚动条-->
        <item name="android:scrollbars">vertical</item>
        <!--单行?-->
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginEditTextTheme" parent="AccountTextStyle">

        <item name="android:textColorHint">#b0ffffff</item>
        <!--光标颜色-->
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:theme">@style/Theme.Custom.Control.EditText</item>
        <!--下划线颜色-->
        <item name="android:backgroundTint" tools:ignore="NewApi">#00000000</item>
        <!--选中文本的背景颜色-->
        <item name="android:textColorHighlight">#8090df24</item>
        <!--<item_album name="android:textSelectHandle">@color/alpha90_green</item_album>-->
        <!--小水滴图标-->
        <item name="android:textSelectHandleLeft">
            @drawable/custom_text_select_handle_left_material
        </item>
        <item name="android:textColorHighlightInverse">
            @drawable/custom_text_select_handle_middle_material
        </item>
        <item name="android:textSelectHandleRight">
            @drawable/custom_text_select_handle_right_material
        </item>
        <!--行间距 默认间距的倍数-->
        <!--android:lineSpacingMultiplier="20"-->
        <!--行间距 固定值-->
        <!--<item_album name="android:lineSpacingExtra">10dp</item_album>-->
    </style>

    <!--textView默认不获取焦点，所以点击不起作用-->
    <style name="ClickableTextView">
        <item name="android:textColor">#b6ffffff</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BottomSheetStyle" parent="BottomSheet.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- 最外层样式 -->
    <style name="wrap_layout.">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">1px</item>
        <item name="android:background">@drawable/bg_layout_shape</item>
    </style>

    <style name="fidst_activity_fragment_title">


        <!-- Customize your theme here. -->
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <!--   <item name="android:drawablePadding">3dp</item>-->
        <item name="android:textColor">@drawable/bottom_button_text_selector</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--登陆界面样式-->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/certainblue</item>
        <item name="colorPrimaryDark">@color/certainblue</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/certainblue</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/certainblue</item>
        <item name="colorControlHighlight">@color/certainblue</item>
        <item name="android:textColorHint">@color/iron</item>
    </style>
    <!--登陆界面按钮样式-->
    <style name="ButtonTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="colorButtonNormal">@color/certainblue</item><!--正常状态下的颜色  -->
        <item name="colorControlHighlight">#22000000</item><!--覆盖色，按下的颜色  -->
    </style>
    <!--登陆提示框按钮样式-->
    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/certainblue</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--登陆界面样式END-->

    <!--关于我的界面样式-->
    <!-- 共用层样式 -->
    <style name="base_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 最外层样式 -->
    <style name="wrap_layout" tools:ignore="DuplicateDefinition">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">1px</item>
        <item name="android:background">@drawable/bg_layout_shape</item>
    </style>
    <!-- 上圆角样式 -->
    <style name="top_layout" parent="base_layout">
        <item name="android:background">@drawable/top_layout_selector</item>
    </style>
    <!-- textview样式 -->
    <style name="usertext">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text_clo</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 文本右边箭头样式 -->
    <style name="img_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/setting_arrow</item>
    </style>
    <!-- view分割线样式 -->
    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/border_clo</item>
    </style>
    <!--无圆角样式  -->
    <style name="mid_layout" parent="base_layout">
        <item name="android:background">@drawable/mid_layout_selector</item>
    </style>
    <!-- 下圆角样式 -->
    <style name="bottom_layout" parent="base_layout">
        <item name="android:background">@drawable/bottom_layout_selector</item>
    </style>
    <!-- 全圆角样式 -->
    <style name="single_layout" parent="base_layout">
        <item name="android:background">@drawable/single_layout_selector</item>
    </style>
    <!-- 全圆角样式2 -->
    <style name="single_layout_for_exit" parent="base_layout">
        <item name="android:background">@drawable/single_layout_selector2</item>
    </style>
    <!--关于我的界面样式END-->

    <!--自定义按钮颜色样式-->
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/light_blue</item>
        <item name="colorControlHighlight">@color/iron</item>
    </style>
    <!--自定义按钮颜色样式END-->

    <!-- 对话框样式 -->
    <style name="dialog_bottom_full" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <!-- 对话框样式END -->

</resources>
